<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="bela.training.android.com.androidtrainingbela.CalculatorActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/operator1"
        android:layout_alignParentTop="true"
        android:layout_marginTop="34dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/operation"
        android:layout_alignBottom="@+id/operator1"
        android:layout_toRightOf="@+id/operator1"
        android:layout_toEndOf="@+id/operator1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/operator2"
        android:layout_alignBottom="@+id/operation"
        android:layout_toRightOf="@+id/operation"
        android:layout_toEndOf="@+id/operation" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:id="@+id/equalBtn"
        android:layout_below="@+id/operator1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/result"
        android:layout_alignBottom="@+id/equalBtn"
        android:layout_toRightOf="@+id/equalBtn"
        android:layout_toEndOf="@+id/equalBtn"
        android:layout_alignTop="@+id/equalBtn" />

</RelativeLayout>
