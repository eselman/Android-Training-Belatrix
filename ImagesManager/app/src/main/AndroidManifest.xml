<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bela.training.android.com.imagesmanager">


    <!-- Permission to Write in the External Storage -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- Permission to use INTERNET -->

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainImagesActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".TextsActivity" />
        <activity android:name=".FirstButtonActivity" />
        <activity android:name=".SecondButtonActivity" />
        <activity android:name=".ThirdButtonActivity"></activity>

        <service
            android:name=".services.ImageDownloaderService"
            android:exported="false" />
    </application>

</manifest>